{
  "name": "admanagekit-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for AdManageKit Android library - documentation lookup and code generation",
  "main": "dist/index.js",
  "bin": {
    "admanagekit-mcp": "dist/index.js"
  },
  "scripts": {
