<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <TextView
      android:id="@+id/enable_splash_screen_text"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="10dp"
      android:text="@string/show_app_open_ad_on_all_starts_text"
      android:textSize="16sp"
      app:layout_constraintEnd_toStartOf="@id/show_app_open_ad_all_starts_switch"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.material.switchmaterial.SwitchMaterial
      android:id="@+id/show_app_open_ad_all_starts_switch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:scaleX="1.5"
      android:scaleY="1.5"
      app:layout_constraintBottom_toBottomOf="@+id/enable_splash_screen_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/enable_splash_screen_text" />

  <TextView
      android:id="@+id/main_activity_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/leave_and_switch_back"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/show_app_open_ad_all_starts_switch" />

</androidx.constraintlayout.widget.ConstraintLayout>
