<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true">

    <!-- Semi-transparent Overlay -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:alpha="0" />

    <!-- Content Card with Scale Animation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/contentCard"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:translationY="50dp"
        android:alpha="0"
        app:cardBackgroundColor="?android:attr/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/colorBackground"
            android:padding="32dp"
            android:gravity="center">

            <!-- App Icon Container -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeWidth="2dp"
                app:strokeColor="?attr/colorPrimary">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary">

                    <!-- App Logo Icon - Replace with your app icon if needed -->
                    <ImageView
                        android:id="@+id/appIconImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_dialog_info"
                        android:contentDescription="App icon"
                      />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Welcome Back Text -->
            <TextView
                android:id="@+id/welcomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:letterSpacing="0.01"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/welcomeSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading your content..."
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="28dp"
                android:fontFamily="sans-serif" />

            <!-- Progress Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="160dp"
                android:layout_height="3dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminate="true"
                android:indeterminateTint="?attr/colorPrimary"
                android:layout_marginBottom="20dp" />

            <!-- Loading Text -->
            <TextView
                android:id="@+id/welcomeFooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Just a moment..."
                android:textSize="12sp"
                android:textColor="?android:attr/textColorTertiary"
                android:alpha="0.7"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
