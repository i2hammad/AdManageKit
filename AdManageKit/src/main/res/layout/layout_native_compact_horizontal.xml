<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="?attr/colorSurface">

            <!-- Ad Choices -->
            <com.google.android.gms.ads.nativead.AdChoicesView
                android:id="@+id/ad_choices_view"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <!-- Left Section: Icon + MediaView (min 120x120 for video support) -->
            <FrameLayout
                android:id="@+id/left_section"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <com.google.android.gms.ads.nativead.MediaView
                    android:id="@+id/ad_media"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <!-- Icon Overlay -->
                <ImageView
                    android:id="@+id/ad_app_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:background="?attr/colorSurface"
                    android:padding="2dp"
                    android:scaleType="centerCrop" />

            </FrameLayout>

            <!-- Right Section: Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/left_section"
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <!-- Headline -->
                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ad Headline Here"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium" />

                <!-- Body -->
                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ad description text"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/roboto" />

                <!-- Bottom Row: Advertiser + CTA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/ad_advertiser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Advertiser"
                        android:textSize="11sp"
                        android:textColor="?attr/colorOutline"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto" />

                    <Button
                        android:id="@+id/ad_call_to_action"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="@string/install"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="16dp"
                        android:background="@drawable/ads_bg_lib"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</com.google.android.gms.ads.nativead.NativeAdView>
