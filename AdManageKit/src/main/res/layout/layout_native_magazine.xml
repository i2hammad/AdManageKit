<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media with Overlay Badge -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Large Media -->
                <com.google.android.gms.ads.nativead.MediaView
                    android:id="@+id/ad_media"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop" />

                <!-- Top Row: Sponsored Badge + AdChoices -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <!-- Sponsored Pill Badge -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_card_ads"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="SPONSORED"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.08"
                        android:fontFamily="@font/roboto_medium" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <com.google.android.gms.ads.nativead.AdChoicesView
                        android:id="@+id/ad_choices_view"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/bg_card_ads"
                        android:padding="2dp" />

                </LinearLayout>

            </FrameLayout>

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Large Headline (Magazine Style) -->
                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Magazine Style Headline That Catches Attention"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:fontFamily="serif" />

                <!-- Body/Excerpt -->
                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="A compelling excerpt that draws readers in and makes them want to learn more about this featured content..."
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.3"
                    android:fontFamily="serif" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="?attr/colorOutlineVariant" />

                <!-- Author/Advertiser Row + CTA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Icon with circular background -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="?attr/colorOutlineVariant">

                        <ImageView
                            android:id="@+id/ad_app_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Advertiser Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ad_advertiser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advertiser"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/ad_stars"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:scaleX="0.8"
                                android:scaleY="0.8"
                                android:transformPivotX="0dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- CTA Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/ad_call_to_action"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Read More"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:paddingHorizontal="20dp"
                        app:cornerRadius="20dp"
                        app:backgroundTint="?attr/colorPrimary" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</com.google.android.gms.ads.nativead.NativeAdView>
