<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true">

    <!-- Full screen semi-transparent overlay -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:alpha="0" />

    <!-- Content Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/contentCard"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        android:translationY="50dp"
        android:alpha="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- Animated Progress Container -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp">

                <!-- Outer rotating circle -->
                <View
                    android:id="@+id/outerCircle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rotating_circle_outer" />

                <!-- Inner rotating circle -->
                <View
                    android:id="@+id/innerCircle"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rotating_circle_inner" />

                <!-- Center icon -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressIndicator"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    app:indicatorColor="#2196F3"
                    app:trackColor="#E3F2FD"
                    app:trackThickness="4dp" />

            </FrameLayout>

            <!-- Loading Text -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/loadingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading Ad"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/loadingMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please wait a moment..."
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center" />

            <!-- Animated dots -->
            <LinearLayout
                android:id="@+id/dotsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:id="@+id/dot1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/loading_dot"
                    android:alpha="0.3" />

                <View
                    android:id="@+id/dot2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/loading_dot"
                    android:alpha="0.3" />

                <View
                    android:id="@+id/dot3"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/loading_dot"
                    android:alpha="0.3" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
