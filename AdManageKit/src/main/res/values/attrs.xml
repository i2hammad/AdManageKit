<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- NativeTemplateView attributes -->
    <declare-styleable name="NativeTemplateView">
        <!-- The template style to use for the native ad -->
        <attr name="adTemplate" format="enum">
            <!-- Modern & Material Design Templates -->
            <enum name="card_modern" value="0" />
            <enum name="material3" value="1" />
            <enum name="minimal" value="2" />
            <enum name="compact_horizontal" value="3" />
            <enum name="story_style" value="4" />
            <enum name="full_width_banner" value="5" />
            <enum name="grid_card" value="6" />
            <enum name="list_item" value="7" />
            <enum name="featured" value="8" />
            <enum name="overlay_dark" value="9" />
            <enum name="magazine" value="10" />
            <enum name="media_content_split" value="11" />
            <enum name="app_store" value="12" />
            <enum name="social_feed" value="13" />
            <enum name="gradient_card" value="14" />
            <enum name="pill_banner" value="15" />
            <enum name="medium_horizontal" value="16" />
            <enum name="spotlight" value="17" />
            <!-- Video Templates -->
            <enum name="video_small" value="18" />
            <enum name="video_medium" value="19" />
            <enum name="video_large" value="20" />
            <enum name="video_square" value="21" />
            <enum name="video_vertical" value="22" />
            <enum name="video_fullscreen" value="23" />
        </attr>

        <!-- AdChoices icon placement position -->
        <attr name="adChoicesPlacement" format="enum">
            <enum name="top_left" value="0" />
            <enum name="top_right" value="1" />
            <enum name="bottom_right" value="2" />
            <enum name="bottom_left" value="3" />
        </attr>
    </declare-styleable>

</resources>
