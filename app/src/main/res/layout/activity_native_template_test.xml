<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Native Template Tester"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Template Selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Template"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <!-- Template Spinner -->
                    <Spinner
                        android:id="@+id/spinnerTemplate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:padding="8dp" />

                    <!-- Navigation Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnPrevTemplate"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Previous"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/btnNextTemplate"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="Next"
                            android:textAllCaps="false" />

                    </LinearLayout>

                    <!-- Current Template Info -->
                    <TextView
                        android:id="@+id/tvCurrentTemplate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Template: Card Modern"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <TextView
                        android:id="@+id/tvTemplateInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Modern card with media, icon, rating &amp; Material button"
                        android:textSize="12sp"
                        android:textColor="#757575" />

                    <!-- Ad Type Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Use Video Native Ad"
                            android:textSize="14sp"
                            android:textColor="#424242" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchVideoAd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAdUnitInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Standard Native Ad"
                        android:textSize="11sp"
                        android:textColor="#9E9E9E" />

                    <!-- Load Button -->
                    <Button
                        android:id="@+id/btnLoadAd"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="Load Ad"
                        android:textAllCaps="false"
                        android:backgroundTint="?attr/colorPrimary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Template Preview Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Preview"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#757575" />

            <!-- Native Template View Preview -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                   >

                    <com.i2hammad.admanagekit.admob.NativeTemplateView
                        android:id="@+id/nativeTemplateView"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        app:adTemplate="flexible" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- New Templates Demo Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="New Templates Demo"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#757575" />

            <!-- Grid Item Demo - 2 column layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <com.i2hammad.admanagekit.admob.NativeTemplateView
                        android:id="@+id/gridItemLeft"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:adTemplate="top_icon_media" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <com.i2hammad.admanagekit.admob.NativeTemplateView
                        android:id="@+id/gridItemRight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:adTemplate="grid_item" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="grid_item template - 2 column grid"
                android:textSize="11sp"
                android:textColor="#9E9E9E" />

            <!-- Flexible Template Demo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <com.i2hammad.admanagekit.admob.NativeTemplateView
                    android:id="@+id/flexibleDemo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:adTemplate="flexible" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="flexible template - adapts to any size"
                android:textSize="11sp"
                android:textColor="#9E9E9E" />

            <!-- Template List Info -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Templates (26)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Standard Templates (20):\ncard_modern, material3, minimal, compact_horizontal, story_style, full_width_banner, grid_card, list_item, featured, overlay_dark, magazine, media_content_split, app_store, social_feed, gradient_card, pill_banner, medium_horizontal, spotlight, flexible, grid_item"
                        android:textSize="12sp"
                        android:textColor="#616161"
                        android:lineSpacingExtra="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Video Templates (6):\nvideo_small, video_medium, video_large, video_square, video_vertical, video_fullscreen"
                        android:textSize="12sp"
                        android:textColor="#616161"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Usage Code Example -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#263238">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usage Example"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4FC3F7" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="monospace"
                        android:text="// XML:\napp:adTemplate=\'featured\'\n\n// Kotlin:\nview.setTemplate(\'magazine\')\nview.loadNativeAd(activity, adUnitId)"
                        android:textSize="11sp"
                        android:textColor="#B0BEC5"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
